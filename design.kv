<PixelWipe>:
    orientation: "vertical"

    Label: # Øverste del af skærmen
        id: file_label
        text: "Vælg et billede eller en mappe"
        size_hint_y: 0.1

    BoxLayout: # Det område, hvor før og efter billed bliver vist i
        size_hint_y: 0.4
        Image:
            id: before_image
            source: '' # Starter med at være tomt, altså, uden noget billede
        Image:
            id: after_image
            source: ''

    ProgressBar: # Bliver defineret vha. main.py, men visuelt vist her
        id: progress # id, som vi kan kalde på i main.py
        max: 100
        value: 0
        size_hint_y: 0.05

    BoxLayout: # De tre knapper, som programmet fungerer ud fra
        size_hint_y: 0.1
        Button:
            text: "Import et enkelt billede"
            on_release: root.select_file()
        Button:
            text: "Import billeder fra mappe"
            on_release: root.select_folder()
        Button:
            text: "Begynd baggrundsfjernelse"
            on_release: root.start_processing() # Når knappen bliver trykket på, påbegynder start_processing funktionen i main.py
